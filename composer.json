{
    "name": "fluix/fconfig",
    "description": "FConfig Management",
    "type": "library",
    "license": "MIT",
    "version": "1.0.1",
    "authors": [
        {
            "name": "Vladimir Melnik",
            "email": "melnik@readdle.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "readdle/crypto": "^0.0.3"
    },
    "autoload": {
        "exclude-from-classmap": ["*Test.php"],
        "classmap": [
            "src/"
        ],
        "files": [
            "src/Fluix/Config/functions.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "src/"
        ],
        "files": [
            "src/Fluix/Config/functions.php"
        ]
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.9",
        "mikey179/vfsstream": "^1.6",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^8.4",
        "slevomat/coding-standard": "^5.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    },
    "bin": [
        "fconfig"
    ],
    "scripts": {
        "register-standards": "phpcs --config-set installed_paths $(pwd),$(pwd)/vendor/slevomat/coding-standard,$(pwd)/vendor/phpcompatibility/php-compatibility,$(pwd)/vendor/pheromone/phpcs-security-audit,$(pwd)/vendor/escapestudios/symfony2-coding-standard 2>/dev/null || true",
        "post-install-cmd": [
            "@register-standards"
        ],
        "test": [
            "phpunit -c $(pwd)/phpunit.xml.dist"
        ],
        "lint-autofix": [
            "phpcbf -s -n --standard=$(pwd)/phpcs.ruleset.xml --runtime-set testVersion 7.2- --extensions=php --encoding=utf-8 $(pwd)/src/ 2>/dev/null || true"
        ],
        "lint": [
            "phpcs -s -n --standard=$(pwd)/phpcs.ruleset.xml --runtime-set testVersion 7.2- --extensions=php --encoding=utf-8 $(pwd)/src/"
        ],
        "ci": [
            "@lint",
            "@test"
        ]
    }
}
